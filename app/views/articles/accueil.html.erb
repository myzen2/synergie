<main role="main">
<!-- Page Content -->
  <div class="row">
<!-- Site's title -->
    <div class="col-md-10 col-md-offset-1">
      <div id="sng">
        <h1 id="synergie" >TEAM S<span id="n">N</span>G <small id="t">COMMUNAUTE MULTI-GAMING !</small></h1>
      </div>
    </div>
  </div>

<!-- Blog Entries Column -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-5 col-md-offset-0" >
            <% @articles.each do |article| %>
            <h2><%= raw(article.titre) %></h2>
            <p><span class="glyphicon glyphicon-time"></span> Publi√© le <%= t(article.created_at) %></p>
            <p><%#= image_tag article.image %></p>
            <div class="texte">
              <p id="texte"><%= raw(article.contenu[0...200]) %></p>
              <p><%= link_to ('Lire la suite <span class="glyphicon glyphicon-chevron-right"></span>').html_safe, article_path(article), class: "btn btn-primary" %></p>
            <% end %>
          </div>
          </div>
        </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-2">
          <%= render 'partials/side' %>
        </div>
      </div>
    </div>
  </div>
</div>
</main>
