<%= render(:partial=>"section") %>
<div class="wrapper row-offcanvas row-offcanvas-left">
  <!-- Right side column. Contains the navbar and content of the page -->
  <aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Tableau de bord <br>
        <small>Control panel</small>
      </h1>
    </section>
    <!-- Main content -->
    <section class="apercu">
      <div class="panel panel-default devise-bs">
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-6 connectedSortable">
            <!-- user info -->
            <div class="box box-info">
              <!--div class="box-header"-->
              <div class="panel-heading">
                <h3 class="box-title"><i class="fa fa-user"></i> Informations utilisateur</h3>
              </div>
              <div class="box-body" style="overflow: hidden;">
                <div class="col-sm-12">
                  <div class="panel-body">
                    <table class="table table-striped">
                      <tbody>
                        <tr>
                          <td>Pseudo :</td>
                          <td><%= current_user.pseudo %></td>
                        </tr>
                        <tr>
                          <td>Nom :</td>
                          <td><%= current_user.prenom + " " + current_user.nom %></td>
                        </tr>
                        <tr>
                          <td>Date d'inscription :</td>
                          <td><%= current_user.created_at.to_date.inspect %></td>
                        </tr>
                        <tr>
                          <td>Dernière connexion :</td>
                          <td><%= current_user.last_sign_in_at.to_date.inspect %></td>
                        </tr>
                        <tr>
                          <td>Votre dernière IP de connexion :</td>
                          <td><%= current_user.last_sign_in_ip %></td>
                        </tr>
                        <tr>
                          <td>Votre IP actuelle :</td>
                          <td><%= current_user.last_sign_in_ip %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </section><!-- /.Left col -->
        </div><!-- /.row (main row) -->
      </section><!-- /.content -->
    </aside><!-- /.right-side -->
  </div><!-- ./wrapper -->
